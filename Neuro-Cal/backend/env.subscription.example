# NeuroCal Subscription System Environment Variables
# Copy this file to .env and fill in your actual values

# Stripe Configuration
STRIPE_PUBLISHABLE_KEY=pk_test_... # Your Stripe publishable key
STRIPE_SECRET_KEY=sk_test_... # Your Stripe secret key
STRIPE_WEBHOOK_SECRET=whsec_... # Your Stripe webhook secret

# Stripe Price IDs (create these in your Stripe dashboard)
STRIPE_BASIC_MONTHLY_PRICE_ID=price_... # Basic plan monthly price ID
STRIPE_BASIC_YEARLY_PRICE_ID=price_... # Basic plan yearly price ID
STRIPE_PRO_MONTHLY_PRICE_ID=price_... # Pro plan monthly price ID
STRIPE_PRO_YEARLY_PRICE_ID=price_... # Pro plan yearly price ID

# Database Configuration
DB_USER=your_db_user
DB_HOST=localhost
DB_NAME=neurocal
DB_PASSWORD=your_db_password
DB_PORT=5432

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here

# App Configuration
APP_URL=https://yourdomain.com
FRONTEND_URL=https://yourdomain.com

# Trial Configuration
TRIAL_DURATION_DAYS=7 # How long the free trial lasts

# Email Configuration (for sending trial expiry and payment failure emails)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=your_sendgrid_api_key

# Redis Configuration (optional, for caching)
REDIS_URL=redis://localhost:6379

# Security
ENCRYPTION_KEY=your_32_character_encryption_key_here

# Feature Flags
ENABLE_SUBSCRIPTION_SYSTEM=true
ENABLE_USAGE_TRACKING=true
ENABLE_EMAIL_NOTIFICATIONS=true

# Admin Configuration
ADMIN_EMAIL=admin@yourdomain.com
SUPPORT_EMAIL=support@yourdomain.com
